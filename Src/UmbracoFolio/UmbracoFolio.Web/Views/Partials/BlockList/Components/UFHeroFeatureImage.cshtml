@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Core.Models.Blocks.BlockListItem>

@{ 
    var content = Model.Content as UfHeroFeatureImage;
}

@if(content == null)
{
    return;
}

@{ 
    var imageUrl = UFImages.GetFullWidthCrop(content.Image);
}

<div class="uk-section uk-section-secondary uf-inset-shadow uf-blurred-background-image" uk-parallax="bgy: 200" style="background: linear-gradient(rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.75)), url('@imageUrl'); background-size: cover;">
    <div class="uk-container">
        <div class="uk-inline uf-non-blurred uk-visible@s">
            <img src="@imageUrl" alt="" class="uf-bordered-thick uf-shadowed uk-visibility-m">
            @if (content.RichText != null)
            {
                <div class="uk-overlay uk-light uk-position-center uf-text-shadow uk-text-center uf-bordered-thin uf-background-dark-translucent uf-compact-text" uk-parallax="opacity: 1,0">
                    @Html.Raw(content.RichText)
                </div>
            }
        </div>
        <div class="uf-non-blurred uk-hidden@s">
            @if (content.RichText != null)
            {
                <div class="uk-light uk-padding uk-text-center uf-text-shadow uf-compact-text" uk-parallax="opacity: 1,0">
                    @Html.Raw(content.RichText)
                </div>
            }
        </div>
    </div>
</div>